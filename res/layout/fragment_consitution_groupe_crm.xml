<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#171f21"
    android:orientation="horizontal"
    tools:ignore="DisableBaselineAlignment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="2"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/consitution_group_crm_listviewMoyensArrived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/consitution_group_crm_listGroup"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@null" />

        <Button
            android:id="@+id/consitution_group_crm_button_addGroup"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/button_style_blue"
            android:text="Ajouter un nouveau groupe Ã  la liste"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</LinearLayout>