<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="#000000">

            <TextView
                android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_nameAndType"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />

            <TextView
                 android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_demand"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_engage"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />

            <TextView
                 android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_arrive"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />

            <TextView
                 android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_free"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_weight="16.67"
                android:layout_height="30dp"
                android:text="@string/fragment_tableau_sector"
                android:textColor="#efefef"
                android:gravity="left"
                android:textSize="16sp" />
	</LinearLayout>

    
      <ListView 
		    android:id="@+id/fragment_tableau_moyen_list_view"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:dividerHeight="10dp"
		    android:padding="10dp"
		    android:background="#171f21"
			android:scrollbarStyle="outsideOverlay"
		/>

</LinearLayout>