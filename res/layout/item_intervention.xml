<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_style_grey"
    android:orientation="horizontal"
    android:weightSum="100" >

    <!-- Name -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="80"
        android:weightSum="100" >

        <TextView
            android:id="@+id/item_intervention_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:layout_weight="50"
            android:textIsSelectable="false"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/item_intervention_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="50"
            android:gravity="right"
            android:textColor="#10bcc9"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/item_intervention_image_button"
        android:layout_weight="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/button_style_red"
        android:text="@string/item_intervention_voir_user" />

</LinearLayout>