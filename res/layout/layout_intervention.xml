<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171f21"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/layout_intervention_labelNameIntervention"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#efefef"
	        android:text="@string/labelNameIntervention" />
	
	    <EditText
	        android:id="@+id/layout_intervention_nameIntervention"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:textColor="#efefef"
	         android:background="#efefef"
	        android:hint="@string/TextIntervention"
	        android:inputType="text" >
	    </EditText>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/layout_intervention_labelCodeIntervention"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#efefef"
	        android:drawableTop="@+id/labelNameIntervention"
	        android:text="@string/labelCodeIntervention" />
	
	    <EditText
	        android:id="@+id/layout_intervention_codeIntervention"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:textColor="#efefef"
	        android:inputType="text"
	         android:background="#efefef"
	        android:hint="@string/TextCode" >
	    </EditText>    
    </LinearLayout>

    <FrameLayout 
    	android:id="@+id/layout_intervention_frameLayout_tableauMoyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <Button
        android:id="@+id/layout_intervention_buttonValidIntervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#efefef"
        android:background="@drawable/button_style_grey"
        android:gravity="center_vertical|center_horizontal|left"
        android:text="@string/ValidIntervention" />
    
</LinearLayout>
