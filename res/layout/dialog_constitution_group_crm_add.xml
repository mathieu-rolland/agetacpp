<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/constitution_group_crm_DialogAddGroup_TextView_Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_style_grey"
        android:gravity="center"
        android:text=""
        android:textColor="#efefef"
        android:textSize="@dimen/text_size"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/constitution_group_crm_dialog_Button_OneLess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/button_style_blue"
            android:gravity="center"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" >
        </Button>

        <EditText
            android:id="@+id/constitution_group_crm_DialogAddGroup_TextEdit_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Nom du groupe"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/demande_de_moyen_Dialog_Button_OneMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/button_style_blue"
            android:gravity="center"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" >
        </Button>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/constitution_group_crm_DialogAddGroup_Button_Cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_style_grey"
            android:gravity="center"
            android:text="@string/demande_de_moyen_Dialog_ButtonText_Cancel"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/constitution_group_crm_DialogAddGroup_Button_Add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_style_grey"
            android:gravity="center"
            android:text="Ajouter"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>