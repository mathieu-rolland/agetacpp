<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/demande_de_moyen_ListView_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@drawable/button_style_white">

    <TextView
        android:id="@+id/consitution_group_crm_item_listViewGroup_Group_TextView_nameMoyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:textColor="#363636"
        android:textSize="@dimen/text_size"
        android:text="@string/general_empty_string"
        android:paddingLeft="10dip"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/consitution_group_crm_item_listViewGroup_Group_Button_assignToGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/consitution_group_crm_item_listViewGroup_Group_TextView_nameMoyen"
        android:layout_marginRight="5dp"
        android:background="@drawable/toggle_expand_red"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="5dip"
        android:text="@string/constitution_group_crm_button_assignToGroup_text"
        android:textColor="#efefef"
        android:textSize="@dimen/text_size"
        android:contentDescription="@string/general_empty_string" />

</RelativeLayout>