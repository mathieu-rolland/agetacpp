<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Agetac</item>
    </style>

    <style name="Theme.Agetac" parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Agetac</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Agetac</item>
        <item name="android:textColor">#000000</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ProgressBar.Agetac" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_agetac</item>
    </style>

    <style name="ActionBar.Transparent.Agetac" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_agetac</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Agetac</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActionBarTabStyle.Agetac" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_agetac</item>
    </style>
    
    <!-- AlertDialog text color fix thanks to Shawn Castrianni, see: http://groups.google.com/group/android-developers/browse_thread/thread/f0b34621d3a70c4b -->
	<style name="AboutDialog" parent="@android:style/Theme.Dialog">
		<item name="android:textColor">#000000</item>
	</style>

</resources>