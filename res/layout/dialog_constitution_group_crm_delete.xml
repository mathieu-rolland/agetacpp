<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/constitution_group_crm_dialog_Delete_TextView_Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_style_grey"
        android:gravity="center"
        android:text=""
        android:textColor="#efefef"
        android:textSize="@dimen/text_size"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/constitution_group_crm_dialog_Button_Cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_style_grey"
            android:gravity="center"
            android:text="@string/demande_de_moyen_Dialog_ButtonText_Cancel"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/constitution_group_crm_dialog_Button_Delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_style_grey"
            android:gravity="center"
            android:text="Supprimer"
            android:textColor="#efefef"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
        
    </LinearLayout>

</LinearLayout>