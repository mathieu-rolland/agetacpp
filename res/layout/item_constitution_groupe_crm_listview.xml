<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/demande_de_moyen_ListView_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@drawable/button_style_grey" >
        
    <ImageView
        android:id="@+id/consitution_group_crm_item_TextView_typeMoyen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="15dip"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#efefef"
        android:text="@string/general_empty_string"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:src="@drawable/fpt_1_sap"
        android:contentDescription="@string/general_empty_string" />

    <TextView
        android:id="@+id/consitution_group_crm_item_TextView_nameMoyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#efefef"
        android:textSize="@dimen/text_size"
        android:text="@string/general_empty_string"
        android:textStyle="bold" />

    <Button
        android:id="@+id/consitution_group_crm_item_Button_assignToGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/consitution_group_crm_item_TextView_nameMoyen"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_style_blue"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="5dip"
        android:text="@string/constitution_group_crm_button_assignToGroup_text"
        android:textColor="#efefef"
        android:textSize="@dimen/text_size" />

</RelativeLayout>